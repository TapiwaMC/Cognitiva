<?xml version="1.0"?>
<block>
  <name>Bits to Chips</name>
  <key>cognitiva_bits_to_chips</key>
  <category>gr-cognitiva</category>
  <import>import cognitiva</import>
  <make>cognitiva.bits_to_chips($phy_ver, $debug_mask)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
<!--  <param>
    <name>...</name>
    <key>...</key>
    <type>...</type>
</param> -->
  <param>
    <name>PHY Version</name>
    <key>phy_ver</key>
    <value>0</value>
    <type>int</type>
  </param>
  <param>
    <name>Debug Mask</name>
    <key>debug_mask</key>
    <value>0</value>
    <type>int</type>
  </param>
  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>byte</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>byte</type>
  </source>
</block>
